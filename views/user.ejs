<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="/css/sidenav.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="/css/user.css">

    <!----===== Boxicons CSS ===== -->
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

    <!----===== Googlecons CSS ===== -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!----===== Bootstrap ===== -->


    <!--<title>Dashboard Sidebar Menu</title>-->
</head>

<body>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <a href="/user/<%=id%>">
                    <img src="../profilePictures/<%=profile_pic%>" alt="">
                </a>
                </span>

                <div class="text logo-text">
                    <span class="name">
                        <%=name%>
                    </span>
                    <span class="profession">
                        @<%=username%>
                    </span>
                </div>
            </div>

            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu">

                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="/user/<%=id%>" class="user">
                            <i class='bx bxs-user icon user'></i>
                            <span class="text nav-text">User Profile</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/notes/<%=id%>" class="notes">
                            <i class='bx bx-book-open icon'></i>
                            <span class="text nav-text">Notes</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/uploadnotes/<%=id%>" class="upload">
                            <i class='bx bx-upload icon'></i>
                            <span class="text nav-text">Upload Notes</span>
                        </a>
                    </li>

                </ul>
            </div>

            <div class="bottom-content">
                <li class="">
                    <a href="/logout">
                        <i class='bx bx-log-out icon'></i>
                        <span class="text nav-text">Logout</span>
                    </a>
                </li>

                <li class="mode">
                    <div class="sun-moon">
                        <i class='bx bx-moon icon moon'></i>
                        <i class='bx bx-sun icon sun'></i>
                    </div>
                    <span class="mode-text text">Dark mode</span>

                    <div class="toggle-switch">
                        <span class="switch"></span>
                    </div>
                </li>

            </div>
        </div>

    </nav>

    <section class="home">
        <div class="text">
            <div class="mainheading">
                <h1 class="heading">User Profile</h1>

            </div>

            <div class="container">
                <div class="main-body">
                    <!-- /Breadcrumb -->
                    <form action="/user/<%=id%>" method="post" enctype="multipart/form-data">
                        <div class="row gutters-sm">
                            <div class="col-md-4 mb-3 picbox">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex flex-column align-items-center text-center">
                                            <img src="../profilePictures/<%=profile_pic%>" alt="Admin" class="rounded-circle" width="150">
                                            <div class="mt-3">
                                                <h4>
                                                    <%=name%>
                                                </h4>
                                                <p class="text-secondary mb-1">@<%=username%>
                                                </p>
                                                <input type="file" class="file" accept="image/*" hidden="hidden" name="profile_pic">
                                                <label for="file" class="imageuploadbtn">Upload Image</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="cardmain mb-3">
                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col-sm-3 textfield">
                                                <h6 class="mb-0">Full Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary fullname">
                                                <input type="text" name="fullname" placeholder="<%=name%>">
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3 textfield">
                                                <h6 class="mb-0">Username</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary username">
                                                <input type="text" name="username" placeholder="<%=username%>">
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3 textfield">
                                                <h6 class="mb-0">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary email">
                                                <input type="email" name="email" placeholder="<%=email%>">
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3 textfield">
                                                <h6 class="mb-0">Password</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary password">
                                                <input type="password" name="password" placeholder="********">
                                            </div>
                                        </div>
                                        <hr>


                                        <div class="row info">
                                            <div class="col-sm-12">
                                                <button type="submit" class="update">Update</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>





                            </div>
                        </div>
                    </form>

                </div>
            </div>
    </section>

    <!-- JS file -->

    <script>
        const body = document.querySelector('body'),
            sidebar = body.querySelector('nav'),
            toggle = body.querySelector(".toggle"),
            searchBtn = body.querySelector(".search-box"),
            modeSwitch = body.querySelector(".toggle-switch"),
            modeText = body.querySelector(".mode-text");


        toggle.addEventListener("click", () => {
            sidebar.classList.toggle("close");
            console.log("clicked");
        })

        // searchBtn.addEventListener("click" , () =>{
        //     sidebar.classList.remove("close");
        // })

        modeSwitch.addEventListener("click", () => {
            body.classList.toggle("dark");

            if (body.classList.contains("dark")) {
                modeText.innerText = "Light mode";
            } else {
                modeText.innerText = "Dark mode";

            }
        });

    </script>
    <script>
        const real_upload_btn=document.querySelector('.file');
        const custom_upload_btn=document.querySelector('.imageuploadbtn');
        custom_upload_btn.addEventListener('click',()=>{
            real_upload_btn.click()
        })
    </script>

</body>

</html>